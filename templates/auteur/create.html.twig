{% extends 'base.html.twig' %}

{% block title %}Hello AuteurController!{% endblock %}

{% block body %}
    <style>
    .form-container {
    max-width: 400px;
    margin: 50px auto;
    padding: 20px;
    background-color: #f9f9f9;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    font-family: 'Arial', sans-serif;
}

.styled-form {
    display: flex;
    flex-direction: column;
}

.form-label {
    margin-bottom: 10px;
    font-size: 1.1em;
    color: #333;
}

.form-input {
    padding: 10px;
    font-size: 1em;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 20px;
    transition: border-color 0.3s ease;
}

.form-input:focus {
    border-color: #4CAF50;
    outline: none;
}

.form-submit {
    padding: 10px 20px;
    font-size: 1em;
    color: white;
    background-color: #4CAF50;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.form-submit:hover {
    background-color: #45a049;
}

    </style>
    <div class="form-container">
        <form method="post" action="/store" class="styled-form">
            <label for="username" class="form-label">Username:</label>
            <input type="text" id="username" name="username" class="form-input"><br><br>

            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" class="form-input"><br><br>

            <input type="submit" value="Submit" class="form-submit">
        </form>  
    </div>
{% endblock %}
